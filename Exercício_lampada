package exercicio_lampada;

public class Lampada {
	String status = "off";
	static int qtdClicks;
	
	void clicked() {
		
		qtdClicks++;
		
		if(status == "on") {
			status = "off";
			System.out.println("A l칙mpada foi apagada");
			
		}else if(status == "off") {
			status = "on";
			System.out.println("A l칙mpada foi acesa");
		}
		if(qtdClicks >= 3) {
			status = "off";
			System.out.println("A l칙mpada est치 quebrada porque foi clicada demais");
		}
	}	
}
